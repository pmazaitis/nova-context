{
    "identifier": "org.mazaitis.paul.ConTeXt",
    "name": "ConTeXt",
    "organization": "Paul Mazaitis",
    "description": "ConTeXt language support.",
    "version": "0.5.0",
    "categories": ["languages"],
    "main": "main.js",
    "entitlements": {
        "clipboard": false,
        "process": true,
        "requests": false,
        "filesystem": "readonly"
    },  
    "taskTemplates": {
        "compile-current": {
            "name": "Compile",
            "description": "Compiles the current ConTeXt document.",
            "persistent": false,
            "tasks": {
                "build": {
                    "shell": true,
                    "command": "$(config:context.binary)",
                    "args": [
                        "$File"
                    ],
                    "env": {
                             
                    }
                }
            },
            "config": [
                {
                    "key": "context.binary",
                    "title": "Context Command",
                    "type": "string",
                    "placeholder": "context",
                    "default": "context"
                }
            ]
        }
    }
}
